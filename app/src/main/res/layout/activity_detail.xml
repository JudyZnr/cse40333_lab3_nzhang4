<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="This is the concrete time for the football game"
        android:layout_gravity="left"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/matchSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the site for the football game"
        android:layout_gravity="left"
        android:typeface="sans"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/testimage" />

        <TextView
            android:id="@+id/teamName1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/imageView"
            android:text="teamName" />

        <TextView
            android:id="@+id/nickName1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/teamName1"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/imageView"
            android:text="nickName" />

        <TextView
            android:id="@+id/rank1"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView"
            android:text="N/A" />

        <TextView
            android:id="@+id/Score"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/teamName1"
            android:layout_toEndOf="@+id/nickName1"
            android:text="This is score" />

        <TextView
            android:id="@+id/section"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/Score"
            android:layout_toEndOf="@+id/rank1"
            android:text="Times" />

        <TextView
            android:id="@+id/teamName2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/section"
            android:text="teamName" />

        <TextView
            android:id="@+id/nickName2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/teamName2"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/Score"
            android:text="nickName" />

        <TextView
            android:id="@+id/rank2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/section"
            android:text="N/A" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/nickName2"
            app:srcCompat="@drawable/testimage" />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_weight="0"
        android:text="Camera" />

</LinearLayout>